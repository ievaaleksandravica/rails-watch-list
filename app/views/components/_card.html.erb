<div class="cards ">
  <% @lists.each do |list| %>
  <div class="card-category d-flex align-items-start flex-column" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 500, crop: :fill %>')">
    <p><%= link_to list.name, list_path(list) %></p>
    <%= link_to list_path(list), method: :delete, class: "mb-auto p-2"  do%>
      <i class="fas fa-minus-circle"></i>
      <% end %>
    </p>
  </div>

  <% end %>
</div>

