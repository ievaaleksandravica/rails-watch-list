
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @list.photo.key, class: "d-block w-100"%>);">
  <div class="container">
    <h1 class="text-center"><%= @list.name %></h1>
  </div>
</div>


<div class="container">

<div class="cards">
<% @bookmarks.each do |bookmark| %>
<div class="card-trip">
  <%= cl_image_tag bookmark.movie.poster_url, height: 800, crop: :fill %>
  <div class="card-trip-infos">
    <div>
      <h2><%= bookmark.movie.title %></h2>
      <p class="card-text"><%= bookmark.comment %></p>
      <p class="card-text" style="color:#af2424"><i>
        <% bookmark.movie.rating.times do %>
        <i class="fas fa-star"></i>
        <% end %>
      </p>

    </div>
    <%= link_to bookmark_path(bookmark),
                method: :delete,
                data: { confirm: "Are you sure?" } do %>
              <i class="fas fa-minus-circle"></i>
    <% end %>
  </div>
</div>
  <% end %>
</div>




<%= link_to 'Add a new bookmark', new_list_bookmark_path(@list), class: "btn btn-secondary btn-block mt-3"  %>

</div>


