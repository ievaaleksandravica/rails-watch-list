  <h1 class="text-center"><%= @list.name %></h1>

    <% @bookmarks.each do |bookmark| %>
      <div class="card" style="width: 18rem;">
       <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="...">
      <div class="card-body">
    <h5 class="card-title"><%= bookmark.movie.title %></h5>
    <p class="card-text"><%= bookmark.comment %></p>
    <p class="card-text"><i>Rating: <%=bookmark.movie.rating %> stars</i></p>
    <%= link_to "Remove",
          bookmark_path(bookmark),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
  </div>
</div>
    <% end %>

<%= link_to 'Add a new bookmark', new_list_bookmark_path(@list), class: "btn btn-success btn-block"  %>





