<div id="carouselExampleSlidesOnly" class="mb-3 carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill, class: "d-block w-100"%>
    </div>
  </div>
</div>


<h1 class="text-center"><%= @list.name %></h1>

<div class="row">
    <% @bookmarks.each do |bookmark| %>

    <div class="col-sm-6 mb-3">
      <div class="card">
        <div class="card-body">
          <img src="<%= bookmark.movie.poster_url %>" class="mb-2 card-img-top" alt="...">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text"><%= bookmark.comment %></p>
          <p class="card-text"><i>Rating: <%=bookmark.movie.rating %> stars</i></p>
          <%= link_to "Remove",
                bookmark_path(bookmark),
                method: :delete,
                data: { confirm: "Are you sure?" } %>
        </div>
      </div>
    </div>
    <% end %>
</div>
<%= link_to 'Add a new bookmark', new_list_bookmark_path(@list), class: "btn btn-success btn-block"  %>





